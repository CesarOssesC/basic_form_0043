<h1 class="text-center my-5">Crear Periodista</h1>
<br><br>


<div class="d-flex justify-content-center">
    <div class="card col-6 ">
        <%= form_with model: @journalist, method: :post do |form| %>
            <div class="border p-5 shadow ">
                <div class="mb-3">
                    <%= form.label :name, "Nombre Periodista", class:"form-label" %>
                    <%= form.text_field :name, class:"form-control" %>
                </div>
                <div class="mb-3">
                    <%= form.label :last_name, "Apellido Periodista", class:"form-label" %>
                    <%= form.text_field :last_name, class:"form-control" %>
                </div>
                <div class="mb-5">
                    <%= form.label :specialty, "Especialidad Periodista", class:"form-label" %>
                    <%= form.text_field :specialty, class:"form-control" %>
                </div>
                <div class="text-center">
                    <%= form.submit "Enviar", class:"btn btn-dark" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
<div class="text-center my-5">
    <%= link_to "Listado journalists", journalists_index_path, class:"btn btn-dark" %>
</div>

